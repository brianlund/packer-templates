{
  "variables": {
    "aws_access_key":     "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key":     "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_session_token":  "{{env `AWS_SESSION_TOKEN`}}",
    "aws_ami":      "{{env `aws_ami`}}",
    "aws_vpc_id":   "{{env `aws_vpc_id`}}",
    "aws_subnet":   "{{env `aws_subnet`}}",
    "aws_instance_profile":   "{{env `aws_instance_profile`}}",
    "shortname": "{{env `shortname`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
		"token":      "{{user `aws_session_token`}}",
    "region": "eu-west-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "amzn2*x86_64*",
        "root-device-type": "ebs"
      },
      "owners": ["amazon"],
      "most_recent": true
    },
    "vpc_id":   "{{user `aws_vpc_id`}}",
    "subnet_id":  "{{user `aws_subnet`}}",
    "iam_instance_profile": "{{user `aws_instance_profile`}}",
    "instance_type": "t2.large",
    "ssh_username": "ec2-user",
    "ami_name": "ami-{{user `shortname`}}-{{timestamp}}"
    }],
    "provisioners": [
      {
        "type": "shell",
        "inline": ["sudo amazon-linux-extras install epel","sudo yum install -y nginx", "sudo systemctl enable nginx", "sudo systemctl start nginx"]
      },
      {
        "type": "shell",
        "inline": ["sudo rm -rf /usr/share/nginx/html/*", "mkdir startwiz"]
      },
      {
        "type": "file",
        "destination": "startwiz",
        "source": "startwiz/"
      },
      {
        "type": "shell",
        "inline": ["sudo mv startwiz/src/* /usr/share/nginx/html/"]
      }
    ]
    }
    
    
